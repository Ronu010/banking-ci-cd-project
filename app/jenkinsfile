pipeline {
    agent any
    stages {
        stage('Test') {
            steps {
                echo 'Pipeline is running!'
            }
        }
        stage('Build') {
            steps {
                echo 'Starting Docker build...'
                bat 'docker --version'
                bat 'docker build -t banking-app .'
                echo 'Docker build completed.'
            }
        }
    }
    post {
        success {
            echo 'Pipeline completed successfully.'
        }
        failure {
            echo 'Pipeline failed. Please check logs.'
        }
    }
}

