pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                bat 'git clone https://github.com/ronu010/banking-project.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                bat 'docker build -t banking-app .'
            }
        }

        stage('Run Docker Container') {
            steps {
                bat 'docker run -d -p 3000:3000 --name banking-container banking-app'
            }
        }
    }
}
